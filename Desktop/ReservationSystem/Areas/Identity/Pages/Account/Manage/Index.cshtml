@page
@model ReservationSystem.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Profil Bilgileri";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<style>
    body {
        background: url('/images/photo.jpg') no-repeat center center fixed;
        background-size: cover;
    }
</style>

<h2 class="text-white">@ViewData["Title"]</h2>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card p-4 shadow-lg" style="max-width: 800px; width: 100%; border-radius: 20px;">
        <div class="row">
            <div class="col-md-8">
                <form id="profile-form" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="form-group mb-3">
                        <label>Kullanıcı Adı</label>
                        <input asp-for="Username" class="form-control" disabled />
                    </div>

                    <div class="form-group mb-3">
                        <label>Ad Soyad</label>
                        <input class="form-control" name="FullName" placeholder="Ad Soyad" />
                    </div>

                    <div class="form-group mb-3">
                        <label>Doğum Tarihi</label>
                        <input type="date" name="BirthDate" class="form-control" />
                    </div>

                    <div class="form-group mb-3">
                        <label>Cinsiyet</label>
                        <select name="Gender" class="form-control">
                            <option value="">Seçiniz</option>
                            <option value="Kadın">Kadın</option>
                            <option value="Erkek">Erkek</option>
                            <option value="Diğer">Diğer</option>
                        </select>
                    </div>

                    <div class="form-group mb-3">
                        <label>Telefon</label>
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Telefon" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label>İl</label>
                        <select id="citySelect" name="City" class="form-control">
                            <option value="">Seçiniz</option>
                            <option value="İstanbul">İstanbul</option>
                            <option value="Ankara">Ankara</option>
                            <option value="İzmir">İzmir</option>
                        </select>
                    </div>

                    <div class="form-group mb-3">
                        <label>İlçe</label>
                        <select id="districtSelect" name="District" class="form-control"></select>
                    </div>

                    <div class="form-group mb-3">
                        <label>Adres</label>
                        <textarea name="Address" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="form-group mb-3">
                        <label>E-Posta</label>
                        <input type="email" class="form-control" value="@User.Identity.Name" disabled />
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Kaydet</button>
                </form>
            </div>

            <div class="col-md-4 text-center">
                <img src="/images/default-user.png" class="img-fluid rounded-circle mb-2" style="width: 150px; height: 150px; object-fit: cover;" />
                <form method="post" enctype="multipart/form-data">
                    <input type="file" name="ProfilePhoto" class="form-control mb-2" accept="image/*" />
                    <button class="btn btn-outline-secondary w-100">Profil Fotoğrafı Yükle</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/location-dropdown.js"></script>
}
