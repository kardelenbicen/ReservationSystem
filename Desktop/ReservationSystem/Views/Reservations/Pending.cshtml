@model IEnumerable<ReservationSystem.Models.Reservation>
@{
    ViewData["Title"] = "Bekleyen Rezervasyonlar";
}
<div class="login-register-bg">
    <div class="login-register-form" style="width:100%;max-width:1100px;">
        <h1>Bekleyen Rezervasyonlar</h1>
        <div class="table responsive-table">
            <table class="table table-striped responsive-table">
                <thead>
                    <tr>
                        <th>Kapak</th>
                        <th>Oda</th>
                        <th>Etkinlik</th>
                        <th>Rezervasyon Sahibi</th>
                        <th>Başlangıç</th>
                        <th>Bitiş</th>
                        <th>Açıklama</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-label="Kapak">
                                @if (!string.IsNullOrEmpty(item.MeetingRoom?.CoverImagePath))
                                {
                                    <img src="@item.MeetingRoom.CoverImagePath" alt="@item.MeetingRoom.Name" style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px;" />
                                }
                                else if (item.MeetingRoom?.Images != null && item.MeetingRoom.Images.Any())
                                {
                                    <img src="@item.MeetingRoom.Images.First().ImagePath" alt="@item.MeetingRoom.Name" style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px;" />
                                }
                                else
                                {
                                    <img src="/images/photo.jpg" alt="@item.MeetingRoom?.Name" style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px;" />
                                }
                            </td>
                            <td data-label="Oda">@item.MeetingRoom?.Name</td>
                            <td data-label="Etkinlik">@item.EventName</td>
                            <td data-label="Rezervasyon Sahibi">@item.User?.Email</td>
                            <td data-label="Başlangıç">@item.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                            <td data-label="Bitiş">@item.EndTime.ToString("dd.MM.yyyy HH:mm")</td>
                            <td data-label="Açıklama">@item.Description</td>
                            <td data-label="İşlem">
                                <a asp-action="Approve" asp-route-id="@item.Id" class="btn btn-success btn-sm">Onayla</a>
                                <a asp-action="Reject" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Reddet</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
