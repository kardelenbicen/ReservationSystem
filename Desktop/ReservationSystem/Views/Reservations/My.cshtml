@model IEnumerable<ReservationSystem.Models.Reservation>
@{
    ViewData["Title"] = "Rezervasyonlarım";
}
<div class="login-register-bg">
    <div class="login-register-form" style="width:100%;max-width:1100px;">
        <h1>Rezervasyonlarım</h1>
        <div class="table responsive-table">
            <table class="table table-striped responsive-table">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Oda</th>
                        <th>Etkinlik</th>
                        <th>Başlangıç</th>
                        <th>Bitiş</th>
                        <th>Durum</th>
                        <th>Reddetme Mesajı</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-label="No">@i</td>
                            <td data-label="Oda">@item.MeetingRoom?.Name</td>
                            <td data-label="Etkinlik">@item.EventName</td>
                            <td data-label="Başlangıç">@item.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                            <td data-label="Bitiş">@item.EndTime.ToString("dd.MM.yyyy HH:mm")</td>
                            <td data-label="Durum">
                                @if (item.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">Beklemede</span>
                                }
                                else if (item.Status == "Approved")
                                {
                                    <span class="badge bg-success">Onaylandı</span>
                                }
                                else if (item.Status == "İptal Edildi")
                                {
                                    <span class="badge bg-secondary">İptal Edildi</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Reddedildi</span>
                                }
                            </td>
                            <td data-label="Reddetme Mesajı">@item.RejectMessage</td>
                            <td data-label="İşlem">
                                @if (item.Status != "İptal Edildi" && item.Status != "Rejected")
                                {
                                    if (item.EndTime < DateTime.Now)
                                    {
                                        <span class="text-success">Gerçekleşti</span>
                                    }
                                    else
                                    {
                                        <form asp-action="Cancel" asp-route-id="@item.Id" method="post" style="display:inline;"
                                              onsubmit="return confirm('Rezervasyonu iptal etmek istediğinize emin misiniz?');">
                                            <button type="submit" class="btn btn-danger btn-sm">İptal Et</button>
                                        </form>
                                    }
                                }
                                else if (item.Status == "İptal Edildi")
                                {
                                    <span class="text-muted">İptal Edildi</span>
                                }
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>