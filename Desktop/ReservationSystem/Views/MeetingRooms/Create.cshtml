@model ReservationSystem.Models.MeetingRoom

@{
    ViewData["Title"] = "Yeni Oda Ekle";
}

<div class="login-register-bg">
    <div class="login-register-form" style="max-width: 900px;">
        <h1>Yeni Oda Ekle</h1>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-12">
                <form asp-action="Create" enctype="multipart/form-data" id="reservationForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label">İsim</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Capacity" class="form-label">Kapasite</label>
                            <input asp-for="Capacity" class="form-control" />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="HourlyRate" class="form-label">Saatlik Ücret (₺)</label>
                            <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" min="0" />
                            <span asp-validation-for="HourlyRate" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Oda Türü</label>
                            <div class="d-flex flex-wrap">
                                <div class="form-check me-3"><input class="form-check-input" type="checkbox" name="RoomTypes" value="Konferans"><label class="form-check-label">Konferans</label></div>
                                <div class="form-check me-3"><input class="form-check-input" type="checkbox" name="RoomTypes" value="Düğün"><label class="form-check-label">Düğün</label></div>
                                <div class="form-check me-3"><input class="form-check-input" type="checkbox" name="RoomTypes" value="Tiyatro"><label class="form-check-label">Tiyatro</label></div>
                                <div class="form-check me-3"><input class="form-check-input" type="checkbox" name="RoomTypes" value="Toplantı"><label class="form-check-label">Toplantı</label></div>
                                <div class="form-check me-3"><input class="form-check-input" type="checkbox" name="RoomTypes" value="Seminer"><label class="form-check-label">Seminer</label></div>
                                <div class="form-check me-3"><input class="form-check-input" type="checkbox" name="RoomTypes" value="Eğitim/Kurs"><label class="form-check-label">Eğitim/Kurs</label></div>
                                <div class="form-check me-3"><input class="form-check-input" type="checkbox" name="RoomTypes" value="Sergi/Fuar"><label class="form-check-label">Sergi/Fuar</label></div>
                                <div class="form-check me-3"><input class="form-check-input" type="checkbox" name="RoomTypes" value="Workshop/Atölye"><label class="form-check-label">Workshop/Atölye</label></div>
                                <div class="form-check me-3"><input class="form-check-input" type="checkbox" name="RoomTypes" value="Konser"><label class="form-check-label">Konser</label></div>
                                <div class="form-check me-3"><input class="form-check-input" type="checkbox" name="RoomTypes" value="Tören"><label class="form-check-label">Tören</label></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Location" class="form-label">Konum</label>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Devices" class="form-label">Cihazlar</label>
                            <input asp-for="Devices" class="form-control" />
                            <span asp-validation-for="Devices" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Description" class="form-label">Açıklama</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <h5 class="mt-2">Kapak Fotoğrafı</h5>
                            <input type="file" name="coverImage" id="coverImage" class="form-control" accept="image/*">
                            <small class="form-text text-muted">Bu fotoğraf salon listesinde kapak resmi olarak gösterilecektir.</small>
                        </div>
                        <div class="col-12">
                            <h5 class="mt-2">Salon Resimleri</h5>
                            <input type="file" name="images" id="images" class="form-control" accept="image/*" multiple>
                        </div>
                        <div class="col-12 mt-3">
                            <input type="submit" value="Ekle" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
