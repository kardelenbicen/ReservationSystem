@model ReservationSystem.Models.MeetingRoom
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ReservationSystem.Models.ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Oda Detayı";
}
<style>
    body {
        background: #f5f6fa url('/images/photo.jpg') no-repeat center center fixed;
        background-size: cover;
        min-height: 100vh;
    }
    .room-details-card {
        background: rgba(255,255,255,0.95);
        border-radius: 18px;
        box-shadow: 0 4px 24px rgba(0,0,0,0.13);
        max-width: 700px;
        margin: 48px auto 32px auto;
        padding: 36px 36px 28px 36px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .room-details-card h1 {
        font-size: 3rem;
        font-weight: 600;
        margin-bottom: 18px;
        text-align: center;
    }
    .room-details-table {
        width: 100%;
        margin-bottom: 24px;
        font-size: 1.15rem;
    }
    .room-details-table th {
        text-align: left;
        font-weight: 700;
        width: 120px;
        padding-right: 12px;
    }
    .room-details-table td {
        font-weight: 400;
        padding-bottom: 6px;
    }
    .room-images {
        display: flex;
        flex-wrap: wrap;
        gap: 24px;
        justify-content: center;
        margin-bottom: 18px;
    }
    .room-images img {
        max-width: 260px;
        max-height: 180px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.10);
        cursor: pointer;
        transition: transform 0.2s;
    }
    .room-images img:hover {
        transform: scale(1.07);
    }
    .back-btn {
        margin-top: 18px;
        font-size: 1.1rem;
        padding: 8px 28px;
        border-radius: 8px;
    }
</style>
<div class="room-details-card">
    <h1>@Model.Name</h1>
    <hr />
    <table class="room-details-table">
        <tr>
            <th>İsim</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Kapasite</th>
            <td>@Model.Capacity</td>
        </tr>
        <tr>
            <th>Konum</th>
            <td>@Model.Location</td>
        </tr>
        <tr>
            <th>Cihazlar</th>
            <td>@Model.Devices</td>
        </tr>
        <tr>
            <th>Açıklama</th>
            <td>@Model.Description</td>
        </tr>
    </table>
    <h3>Salon Resimleri</h3>
    <div class="room-images">
    @if (Model.Images != null && Model.Images.Any())
    {
        foreach (var img in Model.Images)
        {
            <img src="@img.ImagePath" onclick="showModal('@img.ImagePath')" />
        }
    }
    else
    {
        <span>Henüz resim eklenmedi.</span>
    }
    </div>
    <a href="@Url.Action("Index")" class="btn btn-secondary back-btn">Geri Dön</a>
</div>
<div id="imgModal" style="display:none; position:fixed; z-index:9999; left:0; top:0; width:100vw; height:100vh; background:rgba(0,0,0,0.8); align-items:center; justify-content:center;">
    <img id="modalImg" src="" style="width:auto; height:auto; max-width:98vw; max-height:98vh; margin:auto; display:block;" />
</div>
<script>
function showModal(src) {
    document.getElementById('modalImg').src = src;
    document.getElementById('imgModal').style.display = 'flex';
}
document.getElementById('imgModal').onclick = function() {
    this.style.display = 'none';
}
</script>

