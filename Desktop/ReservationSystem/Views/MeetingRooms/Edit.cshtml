@model ReservationSystem.Models.MeetingRoom
@{
    ViewData["Title"] = "Odayı Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="background-container">
    <div class="edit-card">
        <h2 class="text-center">Odayı Düzenle</h2>
        <hr />

        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CoverImagePath" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">İsim</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label">Kapasite</label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HourlyRate" class="control-label">Saatlik Ücret (₺)</label>
                <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="HourlyRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Oda Türü</label>
                <div>
                    @foreach (var item in new[] { "Konferans", "Düğün", "Tiyatro", "Toplantı", "Seminer", "Eğitim/Kurs", "Sergi/Fuar", "Workshop/Atölye", "Konser", "Tören" })
                    {
                        <label class="form-check-inline">
                            <input type="checkbox" name="RoomTypes" value="@item" @(Model.RoomType != null && Model.RoomType.Contains(item) ? "checked" : "") /> @item
                        </label>
                    }
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label">Konum</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Devices" class="control-label">Cihazlar</label>
                <input asp-for="Devices" class="form-control" />
                <span asp-validation-for="Devices" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıklama</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label class="control-label">Mevcut Kapak Fotoğrafı</label>
                    @if (!string.IsNullOrEmpty(Model.CoverImagePath))
                    {
                        <div>
                            <img src="@Model.CoverImagePath" style="max-width:200px; margin:10px;" />
                        </div>
                    }
                    else
                    {
                        <p>Henüz kapak fotoğrafı eklenmemiş.</p>
                    }
                </div>
                <div class="form-group">
                    <label class="control-label">Yeni Kapak Fotoğrafı</label>
                    <input type="file" name="coverImage" accept="image/*" class="form-control-file" />
                    <small class="form-text text-muted">Yeni bir kapak fotoğrafı seçerseniz eskisi değiştirilecektir.</small>
                </div>
                <input type="submit" value="Kaydet" class="btn btn-primary w-100" />
            </div>
        </form>

        <h3>Salon Resimleri</h3>
        <div>
            @if (Model.Images != null && Model.Images.Any())
            {
                foreach (var img in Model.Images)
                {
                    <img src="@img.ImagePath" style="max-width:200px; margin:10px; cursor:pointer;" onclick="showModal('@img.ImagePath')" />
                    <form asp-action="DeleteImage" method="post" style="display:inline;">
                        <input type="hidden" name="imageId" value="@img.Id" />
                        <input type="hidden" name="roomId" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                }
            }
            else
            {
                <span>Henüz resim eklenmedi.</span>
            }
        </div>

        <form asp-action="UploadImage" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
            <div class="form-group mt-3">
                <input type="file" name="image" accept="image/*" required class="form-control-file" />
                <button type="submit" class="btn btn-primary mt-2">Resim Yükle</button>
            </div>
        </form>

        <div id="imgModal" style="display:none; position:fixed; z-index:9999; left:0; top:0; width:100vw; height:100vh; background:rgba(0,0,0,0.8); align-items:center; justify-content:center;">
            <img id="modalImg" src="" style="width:auto; height:auto; max-width:98vw; max-height:98vh; margin:auto; display:block;" />
        </div>

        <script>
            function showModal(src) {
                document.getElementById('modalImg').src = src;
                document.getElementById('imgModal').style.display = 'flex';
            }
            document.getElementById('imgModal').onclick = function () {
                this.style.display = 'none';
            }
        </script>

        <div class="mt-4">
            <a asp-action="Index" class="btn btn-secondary w-100">Listeye Dön</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
