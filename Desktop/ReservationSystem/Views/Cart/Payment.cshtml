@{
    ViewData["Title"] = "√ñdeme";
}

<link rel="stylesheet" href="~/css/test.css" />

<div class="background-container">
    <div class="payment-container">
        <div class="payment-card">
            <div class="payment-header">
                <h2>üí≥ G√ºvenli √ñdeme</h2>
                <div class="security-badges">
                </div>
            </div>

            <div class="order-summary">
                <h4>üìã Sipari≈ü √ñzeti</h4>
                <div class="order-items">
                    @foreach (var item in ViewBag.CartItems)
                    {
                        <div class="order-item">
                            <div class="item-info">
                                <span class="item-name">@item.MeetingRoom?.Name</span>
                                <span class="item-event">@item.EventName</span>
                                <span class="item-date">@item.StartTime.ToString("dd.MM.yyyy HH:mm") - @item.EndTime.ToString("HH:mm")</span>
                            </div>
                            <div class="item-price">
                                @item.TotalAmount.ToString("C", new System.Globalization.CultureInfo("tr-TR"))
                            </div>
                        </div>
                    }
                </div>
                <div class="total-amount">
                    <span>Toplam Tutar:</span>
                    <span class="amount">@ViewBag.TotalAmount.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</span>
                </div>
            </div>

            <form id="paymentForm" class="payment-form">
                <div class="payment-method-section">
                    <h5>üí∞ √ñdeme Y√∂ntemi</h5>
                    <div class="payment-methods">
                        <label class="payment-method active">
                            <input type="radio" name="paymentMethod" value="CreditCard" checked>
                            <div class="method-content">
                                <span class="method-icon">üí≥</span>
                                <span class="method-text">Kredi/Banka Kartƒ±</span>
                            </div>
                        </label>
                        <label class="payment-method">
                            <input type="radio" name="paymentMethod" value="Cash">
                            <div class="method-content">
                                <span class="method-icon">üíµ</span>
                                <span class="method-text">Nakit √ñdeme</span>
                            </div>
                        </label>
                    </div>
                </div>

                <div id="cardDetails" class="card-details-section">
                    <h5>üí≥ Kart Bilgileri</h5>
                    
                    <div class="card-input-group">
                        <label for="cardNumber">Kart Numarasƒ±</label>
                        <div class="input-with-icons">
                            <input type="text" id="cardNumber" placeholder="1234 5678 9012 3456" maxlength="19">
                            <div class="card-icons">
                                <img src="data:image/svg+xml;base64," alt="Visa" class="card-icon">
                                <img src="data:image/svg+xml;base64," alt="MasterCard" class="card-icon">
                            </div>
                        </div>
                    </div>

                    <div class="card-row">
                        <div class="card-input-group">
                            <label for="expiryDate">Son Kullanma</label>
                            <input type="text" id="expiryDate" placeholder="MM/YY" maxlength="5">
                        </div>
                        <div class="card-input-group">
                            <label for="cvv">CVV</label>
                            <div class="input-with-tooltip">
                                <input type="text" id="cvv" placeholder="123" maxlength="3">
                                <span class="cvv-tooltip">‚ÑπÔ∏è</span>
                            </div>
                        </div>
                    </div>

                    <div class="card-input-group">
                        <label for="cardHolder">Kart Sahibi Adƒ±</label>
                        <input type="text" id="cardHolder" placeholder="KART SAHIBI ADI" style="text-transform: uppercase;">
                    </div>

                    <div class="installment-section">
                        <label for="installments">Taksit Se√ßenekleri</label>
                        <select id="installments" class="installment-select">
                            <option value="1">Tek √áekim</option>
                            <option value="2">2 Taksit</option>
                            <option value="3">3 Taksit</option>
                            <option value="6">6 Taksit</option>
                            <option value="9">9 Taksit</option>
                            <option value="12">12 Taksit</option>
                        </select>
                    </div>
                </div>

                <div class="security-info">
                    <div class="security-item">
                        <span class="security-icon">üîí</span>
                        <span>Kart bilgileriniz SSL ile ≈üifrelenir</span>
                    </div>
                    <div class="security-item">
                        <span class="security-icon">üõ°Ô∏è</span>
                        <span>3D Secure ile g√ºvenli √∂deme</span>
                    </div>
                </div>

                <div class="payment-actions">
                    <button type="submit" class="pay-button">
                        <span class="button-icon">üí≥</span>
                        <span class="button-text">@ViewBag.TotalAmount.ToString("C", new System.Globalization.CultureInfo("tr-TR")) √ñde</span>
                        <span class="button-arrow">‚Üí</span>
                    </button>
                    <a href="/Cart" class="back-button">
                        ‚Üê Sepete D√∂n
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const paymentMethods = document.querySelectorAll('.payment-method');
    const cardDetails = document.getElementById('cardDetails');
    
    paymentMethods.forEach(method => {
        method.addEventListener('click', function() {
            paymentMethods.forEach(m => m.classList.remove('active'));
            this.classList.add('active');
            
            const radio = this.querySelector('input[type="radio"]');
            radio.checked = true;
            
            cardDetails.style.display = radio.value === 'CreditCard' ? 'block' : 'none';
        });
    });

    document.getElementById('cardNumber').addEventListener('input', function(e) {
        let value = e.target.value.replace(/\s/g, '').replace(/[^0-9]/gi, '');
        let formattedValue = value.match(/.{1,4}/g)?.join(' ') || value;
        e.target.value = formattedValue;

        detectCardType(value);
    });

    document.getElementById('expiryDate').addEventListener('input', function(e) {
        let value = e.target.value.replace(/\D/g, '');
        if (value.length >= 2) {
            value = value.substring(0, 2) + '/' + value.substring(2, 4);
        }
        e.target.value = value;
    });

    document.getElementById('cvv').addEventListener('input', function(e) {
        e.target.value = e.target.value.replace(/[^0-9]/g, '');
    });

    document.getElementById('cardHolder').addEventListener('input', function(e) {
        e.target.value = e.target.value.toUpperCase();
    });

    document.getElementById('paymentForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        const paymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value;
        const cardNumber = document.getElementById('cardNumber').value;
        const expiryDate = document.getElementById('expiryDate').value;
        const cvv = document.getElementById('cvv').value;
        const cardHolder = document.getElementById('cardHolder').value;

        if (paymentMethod === 'CreditCard') {
            if (!cardNumber || !expiryDate || !cvv || !cardHolder) {
                showNotification('L√ºtfen t√ºm kart bilgilerini doldurun.', 'error');
                return;
            }
            
            if (cardNumber.replace(/\s/g, '').length < 16) {
                showNotification('Ge√ßerli bir kart numarasƒ± girin.', 'error');
                return;
            }
        }

        const payButton = document.querySelector('.pay-button');
        const originalText = payButton.innerHTML;
        payButton.innerHTML = '<span class="spinner">‚è≥</span> ƒ∞≈üleniyor...';
        payButton.disabled = true;

        const formData = new FormData();
        formData.append('paymentMethod', paymentMethod);
        formData.append('cardNumber', cardNumber);
        formData.append('expiryDate', expiryDate);
        formData.append('cvv', cvv);
        formData.append('cardHolder', cardHolder);

        fetch('/Cart/ProcessPayment', {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showNotification(data.message, 'success');
                setTimeout(() => {
                    window.location.href = '/Reservations/My';
                }, 2000);
            } else {
                showNotification(data.message, 'error');
                payButton.innerHTML = originalText;
                payButton.disabled = false;
            }
        })
        .catch(error => {
            showNotification('Bir hata olu≈ütu. L√ºtfen tekrar deneyin.', 'error');
            payButton.innerHTML = originalText;
            payButton.disabled = false;
        });
    });

    function detectCardType(number) {
        const cardIcons = document.querySelectorAll('.card-icon');
        cardIcons.forEach(icon => icon.style.opacity = '0.3');
        
        if (number.startsWith('4')) {          
           cardIcons[0].style.opacity = '1';
        } else if (number.startsWith('5') || number.startsWith('2')) {         
            cardIcons[1].style.opacity = '1';
        }
    }

    function showNotification(message, type) {
        const notification = document.createElement('div');
        notification.className = `notification ${type}`;
        notification.innerHTML = `
            <span class="notification-icon">${type === 'success' ? '‚úÖ' : '‚ùå'}</span>
            <span class="notification-text">${message}</span>
        `;
        
        document.body.appendChild(notification);
        
        setTimeout(() => {
            notification.classList.add('show');
        }, 100);
        
        setTimeout(() => {
            notification.classList.remove('show');
            setTimeout(() => {
                document.body.removeChild(notification);
            }, 300);
        }, 3000);
    }
});
</script>